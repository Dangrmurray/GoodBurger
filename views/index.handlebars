<div class="container">

	{{!-- div with burger picture --}}
	<div class="row">
		<div class="col-md-12">
			<img src="/assets/img/goodburg-36.gif" alt="burger" class="center-block">
		</div>

	<!-- end first row -->
	</div>

	<div class="row">

		<div id="welcome"class="col-md-12">
			<h1 class="text-center">Welcome To Good Burger</h1>
			<h4 class="text-center">Home of the Good Burger</h4>
		</div>


	<!-- end second row -->
	</div>

	<div class="row">

		<div class="col-md-5">
			<h3>Uneaten Burgers:</h3>
			<ul>
				{{#each burgers}}
					{{#unless this.devoured}}
						<li>
							<h5>{{this.id}}. {{this.burger_name}}
								<form action='burgers/updateOne/{{this.id}}?_method=PUT' method='POST'>
									<input type='hidden' name='devoured' value='true'>
									<button type='submit' class="btn btn-default glyphicon glyphicon-cutlery" id="eatButton">EAT THIS!</button>
								</form>
							</h5>
						</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div>

		<div class="col-md-2"></div>

		<div class="col-md-5">
			<h3>Eaten Burgers:</h3>
			<ul>
				{{#each burgers}}
					{{#if this.devoured}}
						<li>
							<h5>{{this.id}}. {{this.burger_name}}</h5>
						</li>
					{{/if}}
				{{/each}}
			</ul>
		</div>

	<!-- end third row -->
	</div>

	<br><br>

	<div class="row">

		<div class="col-md-12 text-center">
			<form class="create-update-form" action="burgers/insertOne" method="POST">
				<div class="form-group">
					<h5 class="text-center">Can I take your order?</h5>
					<!-- <label for="bg">Burger Name:</label> -->
					<textarea type="text" name="name" id="burgerForm"></textarea><br>
					<button id="subButton" class="btn btn-default" type="submit">Submit</button>
					
				</div>
			</form>
		</div>

	<!-- end fourth row -->
	</div>

<!-- end bootstrap container -->
</div>